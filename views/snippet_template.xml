<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_snippets_template" name="Custom snippet template">
            <xpath expr="//div[@id='snippet_structure']" position="inside">
                <div class="o_panel_body">
                    <t t-snippet="theme_custom.custom_snippets"
                        t-thumbnail="/odoo-custom-addons/theme_custom/static/images/courses_image.png" />
                </div>
            </xpath>
        </template>
    </data>
</odoo>